        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Applicant)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Applicant)
        </dd>
        <dt class="col-sm-4">
